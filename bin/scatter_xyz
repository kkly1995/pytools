#!/usr/bin/env python
import matplotlib.pyplot as plt
from ase.io import read
from sys import argv

fname = argv[1]

sample = read(fname, format='extxyz')
r = sample.get_scaled_positions(wrap=True)

# plot
fig = plt.figure()
ax = plt.axes(projection='3d')
ax.scatter(r[:,0], r[:,1], r[:,2])
ax.set_xlim((0, 1))
ax.set_ylim((0, 1))
ax.set_zlim((0, 1))
plt.title(fname)
plt.tight_layout()
plt.show()
